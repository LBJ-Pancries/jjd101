<div class="col-md-12">
  <div class="group">

    <h2><%= @category.name %></h2>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Code</th>

          <th>Description</th>

        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.id %>
          </td>
          <td>
            <%= product.title %>
          </td>

          <td><%= product.code %></td>



          <td>
            <%= product.description %>
          </td>


        <% end %>
      </tbody>
    </table>
  </div>
</div>
