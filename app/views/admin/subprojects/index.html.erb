<div class="col-md-12">
  <div class="group">
    <%= link_to("New Subproject", new_admin_subproject_path, class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>单位工程名称</th>
        <th>发表者</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @subprojects.each do |subproject| %>
        <tr>
          <td><%= subproject.title %></td>
          <td><%= subproject.user.email %></td>
          <td>
            <%= link_to("Edit", edit_admin_subproject_path(subproject), class:"btn btn-sm btn-default") %>
            <%= link_to("Delete", admin_project_path(subproject), class: "btn btn-sm btn-default",
                        method: :delete, data: { confirm: "Are you sure?"})%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
