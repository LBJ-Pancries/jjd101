<div class="col-md-12">
  <h2>集采列表</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>品种</th>
        <th>型号</th>
        <th>商品资讯</th>
        <th>数量</th>
        <th>单价</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= link_to(product.title, product_path(product)) %>
          </td>
          <td>
            <%= product.code %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.quantity %>
          </td>
          <td>
            <%= product.price %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
