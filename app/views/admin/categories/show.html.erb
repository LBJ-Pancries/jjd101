<div class="col-md-12">
  <div class="group">
    <%= link_to("Edit", edit_admin_category_path(@category), class: "btn btn-primary pull-right")%>
    <%= link_to("Create a Product", new_admin_category_product_path(@category), class: "btn btn-default pull-right")%>
    <h2><%= @category.name %></h2>
    <table class="table">
      <thead>
        <tr>
          <th>#</th>

          <th>Code</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Price</th>


        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.id %>
          </td>

          <td><%= product.code %></td>

          <td>
            <%= product.title %>
          </td>
          <td><%= product.description %></td>
          <td><%= product.quantity %></td>
          <td>
            <%= product.price %>
          </td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
