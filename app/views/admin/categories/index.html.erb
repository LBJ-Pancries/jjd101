<h2>Category List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增分类", new_admin_category_path, class: "btn btn-primary btn-sm")%>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>类别</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td>
          <%= link_to(category.name, admin_category_path(category))%>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_category_path(category), class: "btn btn-sm btn-default") %>
          <%= link_to("Delete", admin_category_path(category), class: "btn btn-sm btn-default",
                                method: :delete, data: { confirm: "Are you sure?"})%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
