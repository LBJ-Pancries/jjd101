<h2>Edit Priduct</h2>
<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="form-group">
    <%= f.association :category %>
  </div>
  <div class="group">
    <%= f.input :code %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <% if @product.image.present? %>
    <span>目前商品图</span>
    <br>
    <%= image_tag(@product.image.thumb.url )%>
  <% end %>
  <div class="gorup">
    <%= f.input :image, as: :file %>
  </div>
  <%= f.submit "Submit", data: { disble_with: "Submitting..."}%>
<% end %>
