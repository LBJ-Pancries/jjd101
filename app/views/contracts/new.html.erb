<h1><%= @project.title %></h1>
<%= simple_form_for [@project, @contract] do |f| %>
  <div class="form-contract">
    <%= f.association :subproject %>
    <%= f.association :company %>
    
    <%= f.input :title, input_html: { class: "form-control"}%>
    <%= f.input :party_a, input_html: { class: "form-control"}%>

    <%= f.input :amount, input_html: { class: "form-control"}%>
    <%= f.input :description, input_html: { class: "form-control"}%>
    <%= f.label :status %>
    <%= f.select :status, Contract::STATUS.map{ |s| [t(s, :scope => "event.status"), s] }, {}, class: "form-control" %>

  </div>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..."}%>
<% end %>
