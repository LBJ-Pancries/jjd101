<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Creator</th>
        <th>发表时间</th>
        <th>文章内容</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
          <td><%= link_to(post.content, post_path(post)) %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
