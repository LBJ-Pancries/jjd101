<h2>New Product</h2>
<%= simple_form_for [:admin, @category, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="form-group">
    <%= f.association :category %>
  </div>
  <div class="group">
    <%= f.input :code %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity %>
  </div>
  <div class="group">
    <%= f.input :price %>
  </div>
  <div class="group">
    <%= f.input :image, as: :file %>
  </div>
  <%= f.submit "Submit", data: { disble_with: "Submitting..."}%>
<% end %>
