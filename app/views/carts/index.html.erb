<div class="row">
	<div class="col-md-12">
		<%= link_to("清空购物车", clean_carts_path, method: :post,
																						 class: "pull-right",
																						 style: "text-decoration: underline;",
																						 data: { confirm: "Are you sure?"})%>
		<h2>购物车</h2>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>型号</th>
					<th>品种</th>
					<th>商品资讯</th>
					<th>数量</th>
					<th>价格</th>
					<th>操作选项</th>
				</tr>
			</thead>

			<tbody>
				<% current_cart.cart_items.each do |cart_item| %>
					<tr>
						<td>
							<%= cart_item.product.code %>
						</td>
						<td>
							<%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
						</td>
						<td>
							<%= cart_item.product.description %>
						</td>
						<td>

							<%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
								<%= f.select :quantity, 1..cart_item.product.quantity %>
								<%= f.submit "更新", data: { disable_with: "Submiting..."}%>
							<% end %>
						</td>
						<td>
							<%= cart_item.product.price %>
						</td>
						<td>
							<%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
								<i class="fa fa-trash"></i>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<br>
		<div class="total clearfix">
			<span class="pull-right">
				<span>
					<% sum = 0 %>
					<% current_cart.cart_items.each do |cart_item| %>
						<% if cart_item.product.price.present? %>
							<% sum = sum + cart_item.quantity * cart_item.product.price %>
						<% end %>
					<% end %>
					总计 <%= render_cart_total_price(current_cart) %> RMB
				</span>
			</span>
		</div>
		<hr>
		<div class="checkout clearfix">
			<%= link_to("确认结账", checkout_carts_path,
														 method: :post,
														 class: "btn btn-lg btn-danger pull-right" ) %>
		</div>
	</div>
</div>
